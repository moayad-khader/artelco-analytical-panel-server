{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "downlevelIteration": true,
    "paths": {
      "@artelco/*": ["src/*"],
      "@utils/*": ["src/utils*"]
    }
  },
  "typeRoots": ["@types"],
  "include": ["src/**/*"]
}
